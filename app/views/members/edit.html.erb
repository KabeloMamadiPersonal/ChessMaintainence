<%= form_for @member, method: :post, url: members_update_path do |f| %>
  <h2> Edit Member</h2>
  <%= f.hidden_field :id%>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :surname %><br>
    <%= f.text_field :surname%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.text_field :birthday%>
  </div>
  <br/>
  <%= f.submit "Update Member" %>
<% end %>

<br/>
<%= link_to 'Back', root_path%>